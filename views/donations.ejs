<style>
    :root {
    --light-orange-color: #fff8f1;
    --dark-orange-color: #ffa85a;
    --fade-light-orange-color: #fff8f180;

}

::-webkit-scrollbar {
    width: 5px;
    background-color: var(--dark-orange-color);
}

::-webkit-scrollbar-thumb {
    background: var(--light-orange-color); 
}


*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
}

.form-container{
    max-width: 1400px;
    margin : 0 auto;
}

.form-content{
    margin: 1rem;
    
}

h1{
    text-align: center;
    text-decoration: underline;

}

form{
    border-radius: 8px;
    background-color: var(--light-orange-color);
    padding: 1rem;
    width: 80%;
    margin: 0 auto;
    margin-top: 3rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.genderr{
    margin-left: 12px;
    display: flex;
    gap: 1rem;
    align-items: center;
}

.upload-img{
    display: flex;
    gap: 0rem;
    margin-left: 12px;
    align-items: center;
}

input[type="file"]{
    width: 70%;
}

input,textarea{
    background-color: white;
    border: none;
    padding: 1rem 2rem 1rem 2rem;
    border-radius: 8px;
}

button{
    width: 150px;
    padding: 0.5rem 1rem 0.5rem 1rem;
    border: 2px solid transparent;
    background-color: var(--dark-orange-color);
    color: white;
    border-radius: 8px;
    margin: 0 auto;
    transition: all 0.3s;
}
button:hover{
    border: 2px solid var(--dark-orange-color);
    color: black;
    background-color: var(--light-orange-color);
}

.accept-reject {
            display: flex;
            gap: 0.5rem;
            align-self: flex-end;
            margin-bottom: 20px;
        }

@media screen and (max-width: 600px){
    .genderr{
        display: inline;
    }

    h5{
        font-size: 1rem;
    }
    .upload-img{
        flex-direction: column;
    }
}
</style>

